<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cart"
    android:padding="25dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingBottom="10dp"
        >
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_bold"
            android:gravity="center"
            android:text="Giỏ Hàng"
            android:textSize="20sp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sửa"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="@color/mainGreen"
            android:textSize="15sp"
            android:gravity="end"
            android:layout_gravity="center_vertical"
            />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvProduct"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lnCartItemInfo"
        android:layout_marginVertical="10dp"
        />

    <LinearLayout
        android:id="@+id/lnCartItemInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent">
        <TableLayout
            android:id="@+id/tblTableInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/tblVoucher"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:stretchColumns="1"
            android:paddingVertical="5dp"

            >

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Số Lượng"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_regular"
                    android:text="Giá sản phẩm"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txtTotalItemPrice"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="119.000"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="vnđ"
                    android:gravity="end"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Giảm giá"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/txtDiscountMoney"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="vnđ"
                    android:gravity="end"
                    android:textStyle="italic"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"/>
            </TableRow>


            <TableRow>
                <TextView
                    android:id="@+id/txtShippingFee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Phí vận chuyển"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="20.000"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="14sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="vnđ"
                    android:textStyle="italic"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_regular"
                    android:textSize="12sp"/>
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/txtTotal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Tổng cộng"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="139.000"
                    android:gravity="end"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="vnđ"
                    android:textStyle="italic"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="12sp"/>
            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/tblVoucher"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:stretchColumns="1"
            app:layout_constraintBottom_toTopOf="@id/btnCheckOut"
            android:layout_marginVertical="5dp">

            <TableRow>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Voucher"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_bold"
                    android:textSize="16sp"
                    />

                <EditText
                    android:layout_height="40dp"
                    android:layout_width="match_parent"
                    android:textSize="16sp"
                    android:hint="Có Voucher? Dùng ngay"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_regular"
                    android:drawableStart="@drawable/ic_boxchecked"
                    android:background="@drawable/item_corner"
                    android:paddingStart="5dp"
                    />
            </TableRow>
        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCheckOut"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:text="Thanh toán"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:textColor="#ffffff"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:backgroundTint="@color/mainGreen"
            android:textAllCaps="false"
            app:cornerRadius="10dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>