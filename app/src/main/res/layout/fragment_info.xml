<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    tools:context=".InfoFragment">

    <FrameLayout
        android:id="@+id/flBanner"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/img_bannervoucherdetail" />

        <LinearLayout
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/item_corner"
            >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1">

                <TableRow>

                    <TextView
                        android:id="@+id/txtLogo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/item_corner_green"
                        android:fontFamily="@font/montserrat_bold"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="20dp"
                        android:text="Oh!Fresh"
                        android:textColor="@color/white"
                        android:textSize="16sp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/txtVoucherName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_medium"
                            android:text="Giảm 50%"
                            android:textColor="@color/black"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/txtVoucherValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_regular"
                            android:paddingTop="10dp"
                            android:text="Đơn tối thiểu 50k giảm tối đa 25k"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/txtVoucherDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat_light"
                            android:paddingTop="10dp"
                            android:text="Có hiệu lực đến 20/10/2021 00:00"
                            android:textColor="@color/mainGray"
                            android:textSize="12sp" />
                    </LinearLayout>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/txtPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ưu đãi"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/flBanner"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/txtContentPromotion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat_light"
        android:text="Lượt sử dụng có hạn. Nhanh tay kẻo lỡ bạn nhé! Giảm 50% cho đơn tối thiểu 50k giảm tối đa 25k. "
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtPromotion" />

    <TextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Có hiệu lực"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtContentPromotion"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtContentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20/10/2021 00:00 31/12/2021 23:59 "
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintTop_toBottomOf="@+id/txtDate"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sản phẩm"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtContentDate"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtContentProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mã áp dụng cho toàn bộ sản phẩm của Oh! Fresh."
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintTop_toBottomOf="@+id/txtProduct"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanh toán"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtContentProduct"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtContentPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Áp dụng cho mọi hình thức thanh toán."
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintTop_toBottomOf="@+id/txtPayment"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtCondition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Điều kiện"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_medium"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/txtContentPayment"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/txtContentCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã 2611GIAM25K giảm 50% tối đa 25k cho đơn hàng hợp lệ từ 50k trên ứng dụng Oh! Fresh. HSD: 20/10/2021 00:00 31/12/2021 23:59. Số lượng có hạn. Mỗi khách hàng chỉ sử dụng 1 lần"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/montserrat_light"
        app:layout_constraintTop_toBottomOf="@+id/txtCondition"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnUse"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:backgroundTint="@color/mainGreen"
        android:fontFamily="@font/montserrat_bold"
        android:text="Dùng ngay"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>